# ConversationalBot Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# Speech-to-Text Service (Deepgram)
# Get your API key from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Text-to-Speech Service (ElevenLabs)
# Get your API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ElevenLabs Voice ID
# Find voice IDs in your ElevenLabs account or use default voices
# Example: "21m00Tcm4TlvDq8ikWAM" (Rachel)
ELEVENLABS_VOICE_ID=your_elevenlabs_voice_id_here

# Large Language Model (Google AI)
# Get your API key from: https://aistudio.google.com/
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# SERVER CONFIGURATION (Optional - defaults provided)
# =============================================================================

# FastAPI Server Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=7860

# WebSocket Server Configuration
WEBSOCKET_HOST=localhost
WEBSOCKET_PORT=8765

# Server Mode Selection
# Options: "fast_api" (default) or "websocket_server"
WEBSOCKET_SERVER=fast_api

# =============================================================================
# AUDIO CONFIGURATION (Optional - defaults provided)
# =============================================================================

# Session timeout in seconds
SESSION_TIMEOUT=180

# Audio input/output settings
AUDIO_IN_ENABLED=true
AUDIO_OUT_ENABLED=true

# Add WAV header to audio data
ADD_WAV_HEADER=false

# =============================================================================
# LOGGING CONFIGURATION (Optional)
# =============================================================================

# Log level for debugging
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# DEVELOPMENT SETTINGS (Optional)
# =============================================================================

# Enable development mode features
# DEV_MODE=true

# Custom configuration file path (relative to src/config/)
# CONFIG_FILE=config.yaml

# =============================================================================
# PERFORMANCE TUNING (Optional)
# =============================================================================

# Enable metrics collection
# ENABLE_METRICS=true

# Enable usage metrics
# ENABLE_USAGE_METRICS=true

# =============================================================================
# SECURITY SETTINGS (Optional - for production)
# =============================================================================

# CORS origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Enable HTTPS
# ENABLE_HTTPS=false

# SSL certificate paths (if HTTPS enabled)
# SSL_CERT_FILE=path/to/cert.pem
# SSL_KEY_FILE=path/to/key.pem

# =============================================================================
# PROVIDER ALTERNATIVES (Optional)
# =============================================================================

# Alternative Speech-to-Text providers
# STT_PROVIDER=deepgram  # Options: deepgram, whisper
# WHISPER_MODEL=small    # If using whisper: tiny, base, small, medium, large

# Alternative Text-to-Speech providers
# TTS_PROVIDER=elevenlabs  # Currently only elevenlabs supported

# Alternative LLM providers
# LLM_PROVIDER=google  # Options: google, openai (if implemented)

# OpenAI API Key (if using OpenAI LLM)
# OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# NOTES
# =============================================================================

# 1. Only the API keys section is required for basic functionality
# 2. Server configuration has sensible defaults
# 3. Audio and logging settings are optional
# 4. Development and security settings are for advanced use cases
# 5. Make sure to keep your .env file secure and never commit it to version control
# 6. Refer to the README.md for detailed setup instructions 